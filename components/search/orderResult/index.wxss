page {
  background: #fff;
  height: 100%;
  box-sizing: border-box;
  position: relative;
  width: 100%;

}
.orderSearch{
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  background: #fff;
  padding: 20rpx 0;
}
.searchIcon{
  height: 20rpx;
  width: 20rpx;
  vertical-align: middle;
}


/* tab内容 */
.swiper-tab-swiper {
  height: 100%;
}
.orderMain{
  font-size: 30rpx;
}
.orderMain .orderItem{
  padding:0 30rpx;
}

.orderMain .orderItem .await{
  color: #ff3b30;
}

.orderMain .orderItem .await{
  color: #ff3b30;
}
.orderMain .orderItem .already{
  color: #30c675;
}
.orderMain .orderItem .hang{
  color: #999;
}

.orderMain .purchase,.orderMain .accomplish{
  background: rgb(123, 142, 228);
  color: #fff;
  padding: 0rpx 10rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.orderMain .accomplish{
  background: rgb(76, 180, 107) !important;
  margin-left: 20rpx;
  border-radius: 8rpx;
}

.orderMain .some{
  background: #fdd103 !important;
  color: #fff;
}
.orderMain .unsettled{
  background: #ff3b30 !important; 
  color: #fff;
}

.orderMain .orderItemDetai{
  padding: 10rpx;
  mask-type: 10rpx;
}

.orderMain .orderItemDetail .detailItem {
  height:40rpx;
  align-items: center;
  padding:5rpx 10rpx;
  font-size: 28rpx;
}
.orderMain .orderItemDetail{
  background: #fafafa;
  padding:10rpx;
}

.orderMain .orderItemStatus {
  height: 88rpx;
  align-items: center;
}
.orderMain .buyer{
  color: #666;
  height: 88rpx;
  align-items: center;
  font-size: 24rpx;
}
.orderMain .text{
  display: inline-block !important;
}
.orderMain .textOverflow{
  width: 600rpx !important;
}