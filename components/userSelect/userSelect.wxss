/* components/userSelect/userSelect.wxss */
.userSelect {
  background: #fff;
  height: 100%;
  width: 100%;
}
.userSelect .checked{
  background-color: #4d65fd;
  color: #fff !important;
}


.userSelect .selection{
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: #fff;
  padding: 0 30rpx;
  font-size: 30rpx;
}

.userSelect .optionList{
  background-color: #fff;
  padding:10rpx 30rpx;
}

.userSelect .optionList_item{
  display: inline-block;
  padding: 10rpx 20rpx;
  border: 1px solid #f0f0f0;
  border-radius: 52rpx;
  margin: 10rpx; 
  color: #666;
  font-size: 28rpx;
  height: 36rpx;
  line-height: 36rpx;
}
.userSelect .optionList_title{
  margin-bottom: 10rpx;
  margin-top: 30rpx;
}

.userSelect button{
  color: #fff;
  background-color: #4d65fd;
  font-size: 30rpx;
  margin: 50rpx 30rpx;
}