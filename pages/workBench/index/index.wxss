/* 当前公司 */
.workBenchPage .title-section {

  font-size: 34rpx;
  display: flex;
  background: #F6F6F6;
  height: 96rpx;
  padding: 0 30rpx;
  align-items: center;
  justify-content:space-between;
  color: #666666;
}

.workBenchPage .switchCompany image{
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
}

/* 列表 */
.workBenchPage .message image{
  width:96rpx;
  height:96rpx;
  display: block;
  margin:0 auto;
  margin-bottom: 20rpx;
}
.workBenchPage .message{
  margin:30rpx 0; 

}
.workBenchPage .messag text{
  font-size: 28rpx;
  color: #222;
}
.workBenchPage .shopCenter{
  align-items:center;
}
.workBenchPage .shopCenter image{
  height: 64rpx;
  width: 64rpx;

}

.workBenchPage .shopCenter .num{
  font-size: 48rpx;
  color: #4d65fd;
}

.workBenchPage .shopCenter .orderTyle{
  font-size: 24rpx;
  color: #666666;

}

.workBenchPage .shopCenter .list{
  padding: 30rpx;
}
.workBenchPage .shopCenter .more{
  padding: 30rpx;
 

}
.workBenchPage .shopCenter .centerImg{
  display: flex;
  align-items: center;
  justify-content: center;
}

/* headtit */

.workBenchPage .headTit {
  display: flex;
  justify-content: space-between;
  height:96rpx;
  border-top: 1px solid #F6F6F6;
  align-items: center;
  padding: 0 30rpx;
  background: #F6F6F6;
  font-size: 30rpx;
}
.workBenchPage .headTit text{
  font-size: 30rpx;
}

.workBenchPage .headTit .mainTitle {
  color: #222;
  position: relative;
  padding-left: 20rpx;
  align-items: center;

}

.workBenchPage .headTit .mainTitle text{
  height: 30rpx;
   position: relative;
   padding-left:10rpx;
  font-size: 32rpx;

}

.workBenchPage .headTit .mainTitle text:before {
  content: '';
  display: block;
  width: 8rpx;
  height: 32rpx;
  background: #4d65fd;
  position: absolute;
  left:-10rpx;
  top: 50%;
  margin-top: -16rpx;
}
.workBenchPage .manageTit:before{
  background: #999 !important;
}
.workBenchPage .sellerTit:before{
  background: #cfa377 !important;
}

.workBenchPage .headTit .more {
  font-size: 30rpx;
  height: 42rpx;
  display: flex;
  align-items: center;
  position: relative;
  top: -2rpx;
  color: #cfa377;
}

.workBenchPage .currentCompany {
  font-size: 28rpx;
  color: #666;
}

/* 打开app */

.workBenchPage .openApp {
  flex-direction: column;
  padding: 20px;
  
}
.workBenchPage .openApp  view{
  text-align: center;
  justify-content: center;
  padding: 15rpx;
  align-items: center;

}
.workBenchPage .manage image{
  height: 64rpx;
  width: 64rpx;
}
.workBenchPage .manage .tit{
  align-items: center;
  margin-left: 20rpx;
}
.workBenchPage .manage .list{
  display: flex;
  justify-content: center;
  padding: 30rpx 0;

}
.workBenchPage .manage .tit view{
  font-size: 30rpx;
  color: #666666;
}
.workBenchPage .manage .more{
  padding: 30rpx;
  color: #666666;
  font-size: 30rpx;
}

.workBenchPage .message .messageImg{
  position: relative;
}
.workBenchPage .myBuy{
  align-items: center;
  display: flex;
  height: 100%;
  font-size: 30rpx !important;
}

.workBenchPage .message .numTips{
  min-width: 28rpx;
  position: absolute;
  right:46rpx;
  top: 0;
  font-size: 24rpx;
}



