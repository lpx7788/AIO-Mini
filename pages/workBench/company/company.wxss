}

.company .orientation_city {
  height: 40rpx;
  line-height: 40rpx;
  color: #666;
  text-align: center;
}

.company .active {
  color: #4d65fd;
  font-weight: bold;
}

.company .list-fixed {
  width: 100%;
  height:60rpx;
  line-height:60rpx;
  background: #ebebeb;
  color: #999;
  font-size: 28rpx;
  /* padding: 0 20rpx; */
