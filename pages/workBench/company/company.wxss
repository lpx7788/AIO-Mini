  z-index: 9999;
  position: relative;
}
.company .listColom{
  width: 100%;
  background: #fff;
  align-items: center;
  border-bottom: 1rpx #ebebeb solid;
  justify-content:space-between;
  height: 89rpx;

}
.company .selectImag{
  width:100rpx;
}

.company .selectImag image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

.company .bottomBtn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.company .bottomBtn button{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin: 0 30rpx;
}

