  margin-right: 20rpx;
}

.company .orientation {
  white-space: normal;
  display: inline-block;
  width: 55rpx;
  height: 58rpx;
  color: #999;
  text-align: center;
}

.company .orientation_region {
  width: 55rpx;
  font-size: 20rpx;
  position: fixed;
  top: 50%;
  transform: translate(0,-50%);
