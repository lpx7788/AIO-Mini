}
/* 主题蓝色 */
.blue{
 color: #4d65fd !important;
}
.f1f1{
  color: #ccc;
}
.bgblue{
  background: #4d65fd ;
  color: #fff;
}
.orange{
  background: rgb(170, 136, 72)  !important;
  color: #fff;
}
.bgC{
 background: #ccc ;
}
.green{
 color: green;
}
.bgRed{
  background: #ff3b30 !important;
}

/* 主题蓝色 */
.colorWhite{
  color: #fff;
}
.bgWhite{
 background: #fff
}
.pageBg{
  background: #f1f1f1 !important;
}
/* 主题下划线 */
.borderB{
  border-bottom: 1px solid #f0f0f0;
}
.border{
 border:1px solid #f0f0f0;
}
.borderR{
 border-right:1px solid #f0f0f0;
}
.borderT{
   border-top:1px solid #f0f0f0;
}
.color9{
  color: #999 !important;
}
.borderL{
 border-left:1px solid #f0f0f0;
}
.color2{
  color: #222;
}
.baf6{
  background:#f1f1f1;
}
.color6{
  color: #666;
}
.color9{
