}
.block{
  display: block;
}
.none{
  display: none;
}
/* 主题缝隙 */
.rowGaps{
  height: 20rpx;
  background: #f1f1f1;
  width: 100%;
  display: flex;
}
.font28{
  font-size: 28rpx !important;
}
.font30{
  font-size: 30rpx;
}
.font36{
  font-size: 36rpx !important;
}
.font46{
  font-size: 46rpx;
}
.font24{
  font-size: 24rpx !important;
}
.font25{
  font-size: 25rpx !important;
}
.font32{
  font-size: 32rpx;
}

/* 数量提示 */
.numTips{
  color:#fff;
  text-align:center;
  background:#ff3b30;
  vertical-align:2rpx;
  padding:2rpx 6rpx;
  border-radius:6rpx;
  border: 2rpx solid #fff;
}

/* 主按钮 */
.mainBtn{
  border: none;
  font-size: 30rpx;
  outline-style: none;
  color: #fff;
  position: fixed;
  bottom: 30rpx;
  width: 90%;
  left: 50%;
  transform: translate(-50%,0);
  z-index: 1000;

}

/* 吸顶 */
.typefixed{
  position: fixed;
  top:0;
  left:0;
  z-index:1000000;
}
.blod{
  font-weight: blod;
}

.right image{
  height: 30rpx;
  width: 30rpx;
}

/* 单行溢出隐藏 */
.textOverflow{
  width: 150px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.emptyPage{
  margin: 30rpx;
}
.emptyImg{
  height: 200rpx;
  width: 300rpx;
  margin:20rpx auto;
}
.emptyView{
    width: 100%;
    position: absolute;
    left: 50%;
    top: 40%;
    transform: translate(-50%,-50%)
}