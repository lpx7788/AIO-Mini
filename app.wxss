/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background: #f1f1f1;
  font-size: 30rpx;
  color: #333;
}


image.arrow {
  width: 16rpx;
  height: 13rpx;
}

.bold {
  font-weight: 600;
}
.empatyPage{
  margin: 30rpx;
}
/* flex布局 */
.flex{
  display: flex;
}

.flex1{
  flex: 1;
}

.flex2{
  flex: 2;
}

/* 字体居中 */
.textC{
  text-align: center;
}
.textR{
  text-align: right;
}
.textL{
  text-align: left !important;
}

/* 主题红色 */
.red{
